# .env.template
# Copy to .env and fill in your values

# Environment
ENVIRONMENT=mvp

# Azure Core
AZURE_SUBSCRIPTION_ID=your-subscription-id
RESOURCE_GROUP=nutrition-optimizer-mvp
AZURE_LOCATION=eastus

# Azure AI Search
SEARCH_ENDPOINT=https://nutrition-search-mvp.search.windows.net
# SEARCH_ADMIN_KEY=  # Optional, use Managed Identity instead

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com
AZURE_OPENAI_KEY=your-openai-key

# Azure Storage
STORAGE_ACCOUNT_URL=https://nutritionmvp.blob.core.windows.net
# STORAGE_CONNECTION_STRING=  # Optional, use Managed Identity

# Azure Service Bus
SERVICEBUS_CONNECTION_STRING=Endpoint=sb://nutrition-mvp.servicebus.windows.net/...

# SharePoint - Poultry
SHAREPOINT_POULTRY_SITE_ID=your-site-id
SHAREPOINT_POULTRY_DRIVE_ID=your-drive-id

# SharePoint - Swine
SHAREPOINT_SWINE_SITE_ID=your-site-id
SHAREPOINT_SWINE_DRIVE_ID=your-drive-id

# Azure AD
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
# AZURE_AD_CLIENT_SECRET=  # Optional for Managed Identity

# API
FUNCTION_APP_URL=https://nutrition-functions-mvp.azurewebsites.net
PROJECT_NAME=nutrition-optimizer

# MVP Development
MVP_API_KEY=your-secure-api-key-here

# Feature Flags
ENABLE_SEMANTIC_RANKING=true
ENABLE_CACHING=true
ENABLE_TELEMETRY=true
